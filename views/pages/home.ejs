<% layout('../layoutdefault') %>
      <div class="container marketing">
        <!-- Three columns of text below the carousel -->
        <div class="row">
          <% posts.forEach(function(data) { %> 
              <div class="col-lg-4">
                  <img class="img-circle" src="<%= data.image_path %>" alt="<%= data.title %>" width="140" height="140">
                  <h2><%= data.title %> </h2>
                  <p><%= data.description %> </p>
                  <p><a class="btn btn-default" href="new/<%= data._id %>" role="button">View details &raquo;</a></p>
                </div><!-- /.col-lg-4 -->
          <% }) %>
        </div><!-- /.row -->
        <!-- START THE FEATURETTES -->
        
        <h1>News posts</h1>
        <% posts.forEach(function(data) { %> 
          
          <div class="row featurette">
              <div class="col-md-7">
                <h2 class=""><%= data.title %></h2>
                <p class="lead"><%= data.description %></p>
              </div>
              <div class="col-md-5">
                <img class="featurette-image img-responsive center-block" src="<%= data.image_path %>" alt="Generic placeholder image">
              </div>
            </div>
            <hr class="featurette-divider">
        <% }) %>
